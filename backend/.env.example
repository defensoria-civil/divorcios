# Environment Configuration
APP_ENV=development
SECRET_KEY=change-this-secret-key-in-production

# Database Configuration
# Para Docker: postgresql+psycopg2://postgres:postgres@db:5432/def_civil
# Para Local: postgresql+psycopg2://postgres:postgres@localhost:5432/def_civil
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/def_civil

# Redis Configuration (opcional, para caché)
REDIS_URL=redis://localhost:6379/0

# WAHA WhatsApp Configuration
WAHA_BASE_URL=http://localhost:3000
WAHA_API_KEY=defensoria-civil-2025-api-key

# Ollama Cloud (Proveedor Primario)
# Obtener en: https://ollama.com
OLLAMA_CLOUD_API_KEY=tu_ollama_cloud_api_key_aqui
OLLAMA_CLOUD_BASE_URL=https://ollama.com

# Ollama Local (Fallback)
# Requiere Ollama instalado localmente
OLLAMA_BASE_URL=http://localhost:11434

# Gemini (Fallback Crítico para OCR y razonamiento)
# Obtener en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=tu_gemini_api_key_aqui

# Modelos por Tarea
# Chat conversacional
LLM_CHAT_MODEL=minimax-m2:cloud

# Razonamiento legal profundo
LLM_REASONING_MODEL=deepseek-v3.1:671b-cloud

# OCR y extracción de imágenes
LLM_VISION_MODEL=qwen3-vl:235b-cloud

# Verificación de alucinaciones
LLM_HALLUCINATION_MODEL=glm-4.6:cloud

# Embeddings para vectorstore (local preferentemente)
LLM_EMBEDDING_MODEL=nomic-embed-text:latest

# Configuración Legal
ALLOWED_JURISDICTIONS=San Rafael,Mendoza

# Logging (opcional)
# LOG_LEVEL=INFO
# LOG_FILE=logs/app.log
